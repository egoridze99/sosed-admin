<%- include('header') %>
<%- include('modals/statistic.ejs') %>

<div class="row mt-5 justify-content-center">
    <form action="" class="form row" id="statisticMonth">
            <div class="form-group mr-5">
                <select name="month" class="custom-select" required>
                    <option value="">Месяц</option>
                    <option value="01">Январь</option>
                    <option value="02">Февраль</option>
                    <option value="03">Март</option>
                    <option value="04">Апрель</option>
                    <option value="05">Май</option>
                    <option value="06">Июнь</option>
                    <option value="07">Июль</option>
                    <option value="08">Август</option>
                    <option value="09">Сентябрь</option>
                    <option value="10">Октябрь</option>
                    <option value="11">Ноябрь</option>
                    <option value="12">Декабрь</option>
                </select>
            </div>
            <div class="form-group mr-5">
                <select name="year" id="" class="custom-select">
                    <option value="2019">2019</option>
                    <option value="2020">2020</option>
                </select>
            </div>
            <div class="form-group">
                <button class="btn btn-primary" type="submit">Отправить</button>
            </div>
    </form>
</div>

<div class="container-fluid">
    <div class="row border-bottom mt-3">
        <div class="col-md-2">
            <p class="mt-3 black">Продавец</p>
        </div>
        <div class="col-md-2">
            <p class="mt-3 black">Дата</p>
        </div>
        <div class="col-md-2">
            <p class="mt-3 black">Литры</p>
        </div>
        <div class="col-md-2">
            <p class="mt-3 black">Сумма</p>
        </div>
        <div class="col-md-2">
            <p class="mt-3 black">Покупатель</p>
        </div>
        <div class="col-md-2">
            <p class="mt-3 black">Бесплатный литр</p>
        </div>
    </div>
    <div class="wrapper"></div>
</div>

<script src="../script/statisticMonth.js"></script>